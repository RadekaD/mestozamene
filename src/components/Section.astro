---
const { title, backgroundColor = "#fff", textColor = "#000" } = Astro.props;
---

<section>
  <div class="content-container">
    <div class="content">
      <h1>{title}</h1>
      <slot />
    </div>
  </div>
</section>

<style define:vars={{backgroundColor, textColor}}>

  section {
    padding-top: 7rem;
    padding-bottom: 7rem;
    background-color: var(--backgroundColor);
  }

  .content-container {
    max-width: 1080px;
    margin-left: auto;
    margin-right: auto;
  }

  .content {

    p {
      margin-bottom: 20px;
      color: var(--textColor);
    }
  }
</style>
