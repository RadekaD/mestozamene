---
const { title, children } = Astro.props;
---

<section>
  <div class="content-container">
    <div class="content">
      <h1>{title}</h1>
      <p>
        <slot />
      </p>
    </div>
  </div>
</section>

<style>
  section {
    padding-top: 7rem;
    padding-bottom: 7rem;
  }

  .content-container {
    max-width: 1080px;
    margin-left: auto;
    margin-right: auto;
  }

  .content {
    width: 60%;
    
    p {
      width: 70%;
    }
  }
</style>
