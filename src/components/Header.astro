---
import { Image, getImage } from "astro:assets";
// Components
import HeroText from "./HeroText.astro";
import Button from "./Button.astro";
import backgroundImg from "../assets/main-img.jpg";
import Navbar from "./Navbar.astro";
// Variables
const optimizedBackgroundImage = await getImage({
  src: backgroundImg,
  format: "avif",
  quality: "mid",
});

const {primaryColor} = Astro.props
---

<header style={`background-image: url(${optimizedBackgroundImage.src})`}>
  <div class="content-container">
    <Navbar />

    <HeroText primaryColor={primaryColor} />
    <Button primaryColor={primaryColor} type={"primary"}>
      Pozovi nas
    </Button>
  </div>
</header>

<style define:vars={{ primaryColor }}>
  a {
    text-decoration: none;
    color: #fff;
  }

  li {
    list-style: none;
  }

  .content-container {
    max-width: 1080px;
    margin-left: auto;
    margin-right: auto;
  }

 

  header {
    width: 100%;
    height: 720px;
    background-size: cover;
    background-position: center;
    padding: 15px;
    position: relative;
  }

  header::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: inherit;
    z-index: 10;
    background-color: rgba(15, 23, 42, 0.45);
  }
</style>
